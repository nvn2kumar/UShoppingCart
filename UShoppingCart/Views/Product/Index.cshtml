@model IEnumerable<UShoppingCart.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <p class="text-primary"><a asp-action="Upsert" class="btn btn-primary "><i class="fa fa-plus"></i>&nbsp;Create New Product</a></p>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Application Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="30%">
                        @item.Name
                    </td>
                    <td width="10%">
                        ₹ @item.Price
                    </td>
                    <td width="20%">
                        @item.Category.Name
                    </td>
                    <td width="20%">
                        @item.ApplicationType.Name
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="fa fa-edit"></i></a>
                            @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="fa fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product Exists</p>
    }
</div>