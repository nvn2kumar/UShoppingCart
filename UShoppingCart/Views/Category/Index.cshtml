@model IEnumerable<UShoppingCart.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <p class="text-primary"><a asp-action="Create" asp-controller="Category" class="btn btn-primary "><i class="fa fa-plus"></i>&nbsp;Create New Category</a></p>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">
                            @item.Name
                        </td>
                        <td width="30%">
                            @item.DisplayOrder
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="fa fa-edit"></i></a> 
                                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger mx-2"><i class="fa fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category Exists</p>
    }
</div>